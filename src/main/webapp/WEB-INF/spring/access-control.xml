<?xml  version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <bean id="accessController" class="com.explorer.domain.fs.accesscontrol.AccessController"/>

    <aop:config>
        <aop:aspect ref="accessController">

            <aop:before pointcut="execution(* com.explorer.service.FileSystemService.getDirectoryGlobal(String)) and args(path)"
                        method="checkGlobalDir"
                        arg-names="path"/>

            <aop:before pointcut="execution(* com.explorer.service.FileSystemService.getDirectoryHome(String, String)) and args(path, username)"
                        method="checkHomeDir"
                        arg-names="path, username"/>

            <aop:before pointcut="execution(* com.explorer.service.FileSystemService.getSharedDirectory(String, String)) and args(path, username)"
                        method="checkSharedDir"
                        arg-names="path, username"/>

            <aop:before pointcut="execution(* com.explorer.service.FileSystemService.mkdirGlobal(String, String)) and args(path)"
                        method="checkGlobalDir"
                        arg-names="path"/>

        </aop:aspect>
    </aop:config>
</beans>